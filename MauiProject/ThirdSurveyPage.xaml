<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emotional_Map.ThirdSurveyPage"
             Title="ThirdSurveyPage"
             BackgroundColor="White">
    <Grid Padding="0, 20, 0, 20">
        <Image Source="stain.png" 
           Aspect="AspectFit"/>
        <VerticalStackLayout VerticalOptions="Start" WidthRequest="300">
            <Label Text="Пройдите короткий тест и получите персонализированный маршрут для улучшения настроения"
               FontSize="15"
               TextColor="Black"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>
            <Label Text="Как вы себя чувствуете прямо сейчас?"
                FontSize="25"
                TextColor="Black"
                Margin="0, 40, 0, 0"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout VerticalOptions="Center" Margin="0, 80, 0, 0" HorizontalOptions="Center">
            <Button Text="Отлично! Полон энергии"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                Margin="0, 20, 0, 0"
                ImageSource="excellent_smile.png">
                <Button.Shadow>
                    <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                </Button.Shadow>
            </Button>
            


            <Button Text="Нормально, но чего-то не хватает"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                Margin="0, 20, 0, 0"
                ImageSource="normal_smile.png">
                <Button.Shadow>
                    <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                </Button.Shadow>
            </Button>

            <Button Text="Немного грустно/устало"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                Margin="0, 20, 0, 0"
                ImageSource="tired_smile.png">
                <Button.Shadow>
                    <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                </Button.Shadow>
                
            </Button>

            <Button Text="Очень подавлен/тревожно"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                Margin="0, 20, 0, 0"
                ImageSource="depressed_smile.png">
                <Button.Shadow>
                    <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                </Button.Shadow>
            </Button>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>