<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emotional_Map.FirstSurveyPage"
             BackgroundColor="White">

    <Grid>
        <Image Source="stain.png" 
               Aspect="AspectFit"/>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">

            <Label Text="Давайте познакомимся!"
                   FontSize="30"
                   TextColor="Black"
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" 
                   Margin="0, 220, 0, 0"/>

            <Entry Placeholder="Введите имя"
                   FontSize="15"
                   MaxLength="20"
                   Margin="0,52,0,0"
                   PlaceholderColor="#757575"
                   TextColor="Black"
                   BackgroundColor="#E6F9FF"
                   x:Name="NameEntry"
                   TextChanged="NameEntryTextChanged">
                <Entry.Shadow>
                    <Shadow Opacity="0.1" 
                            Radius="5" 
                            Offset="0, 5"/>
                </Entry.Shadow>
                <Entry.Keyboard>
                    <Keyboard x:FactoryMethod="Create">
                        <x:Arguments>
                            <KeyboardFlags>CapitalizeWord</KeyboardFlags>
                        </x:Arguments>
                    </Keyboard>
                </Entry.Keyboard>
            </Entry>

            <Button Text="Продолжить"
                    Clicked="OnNextClicked"
                    HorizontalOptions="Center"
                    IsEnabled="False"
                    x:Name="NextButton"
                    BackgroundColor="#E6F9FF"
                    Margin="0, 100, 0, 0">
                <Button.Shadow>
                    <Shadow Opacity="0.1" 
                            Radius="5" 
                            Offset="0, 5"/>
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
