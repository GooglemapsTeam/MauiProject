<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Emotional_Map.SeventhSurveyPage"
             Title="SeventhSurveyPage"
             BackgroundColor="White">
    <Grid Padding="0, 20, 0, 20">
        <Image Source="stain.png" 
           Aspect="AspectFit"/>
        <VerticalStackLayout VerticalOptions="Start" WidthRequest="300">
            <Label Text="Пройдите короткий тест и получите персонализированный маршрут для улучшения настроения"
               FontSize="15"
               TextColor="Black"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>
            <Label Text="В какой обстановке вы чувствуете себя наиболее комфортно и безопасно?"
                FontSize="25"
                TextColor="Black"
                Margin="0, 40, 0, 0"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>

            <VerticalStackLayout VerticalOptions="Center"  HorizontalOptions="Center">
                <Button Text="Вдали от городской суеты, на природе"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                LineBreakMode="WordWrap"                    
                Margin="0, 20, 0, 0">
                    <Button.Shadow>
                        <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                    </Button.Shadow>
                </Button>



                <Button Text="В уютном и спокойном месте, например, в кафе или парке"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                LineBreakMode="WordWrap"                    
                Margin="0, 20, 0, 0">
                    <Button.Shadow>
                        <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                    </Button.Shadow>
                </Button>

                <Button Text="В окружении интересных людей и оживленной атмосферы"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                LineBreakMode="WordWrap"                    
                Margin="0, 20, 0, 0">
                    <Button.Shadow>
                        <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                    </Button.Shadow>

                </Button>

                <Button Text="В хорошо знакомом и привычном месте"
                Clicked="OnAnswerSelected"
                IsEnabled="True"
                BackgroundColor="#E6F9FF"
                TextColor="Black"
                WidthRequest="300"
                LineBreakMode="WordWrap"                    
                Margin="0, 20, 0, 0">
                    <Button.Shadow>
                        <Shadow Opacity="0.25" 
                        Radius="4" 
                        Offset="0, 4"/>
                    </Button.Shadow>
                </Button>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>